.imgBox {
  text-align: center;
  background-color: #ebeee0;
  padding: 20px 0;
}
.bookImg {
  width: 120px;
  height: 174px;
  vertical-align: middle;
}
.infoBox {
  display: flex;
  flex-flow: row wrap;
  padding: 20px;
  color:#969696;
  font-size: 12px;
}

.infoBox view {
  line-height: 20px;
}
.info,.score {
  flex: 1;
}
.score {
  flex: 0 0 30%;
  padding: 5px 0;
  box-shadow: 0px 5px 15px 5px rgba(0, 0, 0, .05);
  text-align: center;
}
.scoreNum {
  font-size: 24px;
  margin: 5px 0;
  color: #666;
}
.textBox {
  position: relative;
  padding: 20px;
}
.titleText {
  color: #969799;
  padding-bottom: 15px;
}
.btn button {
  height: 35px;
  line-height: 35px;
  position: fixed;
  bottom: 20px;
}
.shareBtn button {
  right: 20px;
}
.operationBtn button {
  left: 20px;
}